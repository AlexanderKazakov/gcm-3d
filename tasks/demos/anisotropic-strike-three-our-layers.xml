		<area type="box" minX="-2" maxX="2" minY="-2" maxY="2" minZ="4" maxZ="6"/>
	</borderCondition>
	
	<render>
        <renderConfig id="cfg1">
            <meshes>
                <mesh>layer1</mesh>
                <mesh>layer2</mesh>
                <mesh>layer3</mesh>
            </meshes>
            <plotOverLine from="0;0;-2.5" to="0;0;5" output="szz_%(step)02d.png">
                <title>Wave propogation over the contact (along Z axis)</title>
                <quantities>
                    <quantity>sxx</quantity>
                    <quantity>szz</quantity>
                </quantities>
                <axes>
                    <left from="-100" to="100"/>
                    <bottom from="-2.5" to="5"/>
                </axes>
            </plotOverLine>
            <render3d output="szz_clipped_%(step)02d.png">
                <title>Wave propogation over the contact (along Z axis)</title>
                <quantity min="-100" max="100">szz</quantity>
                <camera position="-40;0;0" up="0;0;1" focal="0;0;1.25" angle="30" />
